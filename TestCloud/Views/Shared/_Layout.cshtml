<script>
    @{ var localizer = ViewBag.Localizer as Dictionary<string, string>; }

    var getTranslationByKey = function (key, def) {
		const dictionary = @Html.Raw(JsonConvert.SerializeObject(localizer));
		const message = dictionary[key];

		if (message) {
			return message;
		}

        if (def) {
            return def;
        }
        else {
            return "[" + key + "]";
        }
	}
</script>

@{
    Layout = null;
}

<div data-aos="zoom-in" id="contactme-section" class="content">
    <div class="row">
        <div class="offset-md-4 col-md-4">
            <div id="contactme" class="jumbotron">
                <div class="row">
                    <div class="col-md-12 mb-3"><h1 class="h1-title">Contact</h1></div>
                    <div class="col-md-12">
                        @using (Html.BeginForm("ContactMe", "Home", FormMethod.Post, new { @id = "contactForm" }))
                        {
                            <fieldset class="contact-form">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <input id="nameContact" class="form-control" type="text" name="Name" placeholder="Name" required>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <input id="emailContact" class="form-control" type="email" name="Email" placeholder="Email address" required>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <input id="subjectContact" class="form-control" type="text" name="Subject" placeholder="Subject" required>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <textarea id="messageContact" rows="5" class="form-control" name="Message" placeholder="Add your message here" required></textarea>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-md-12 btn-submit">
                                        <input       class="btn btn-lore btn-block" type="submit" id="submit" value="Submit">
                                    </div>
                                </div>
                            </fieldset>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
